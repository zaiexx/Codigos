#include <iostream>

using namespace std;

int main () {

    int mat[4][4];

    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            mat[i][j] = i * j + j * i;
        }
    }

    for (int i = 0; i < 4;i++) {
        for (int j = 0; j < 4; j++) {
            cout << "mat[" << i <<"][" << j << "] = " << mat[i][j]<< endl;
        }
    }





return 0;
}



